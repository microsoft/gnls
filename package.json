{
  "name": "gnls",
  "publisher": "msedge-dev",
  "version": "0.1.0",
  "displayName": "GN Language Server",
  "description": "Code IntelliSense for GN build system.",
  "license": "SEE LICENSE IN LICENSE",
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "gn",
    "chromium"
  ],
  "homepage": "https://github.com/microsoft/gnls",
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/gnls.git"
  },
  "bugs": {
    "url": "https://github.com/microsoft/gnls/issues"
  },
  "main": "./build",
  "engines": {
    "vscode": "^1.60.0"
  },
  "extensionKind": [
    "workspace"
  ],
  "activationEvents": [
    "onLanguage:gn"
  ],
  "contributes": {
    "languages": [
      {
        "id": "gn",
        "aliases": [
          "GN",
          "gn"
        ],
        "extensions": [
          "gn",
          "gni"
        ],
        "configuration": "./build/language.json"
      }
    ],
    "grammars": [
      {
        "language": "gn",
        "scopeName": "source.gn",
        "path": "./build/grammar.json"
      }
    ]
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "~18",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-typescript": "^8.2.5",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "eslint": "^7.32.0",
    "jest": "^27.1.1",
    "node-addon-api": "^4.1.0",
    "node-gyp": "^8.2.0",
    "prettier": "^2.3.2",
    "rollup": "~2.54",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "~4.3",
    "vsce": "^1.97.0",
    "vscode-languageclient": "^7.0.0",
    "vscode-languageserver": "^7.0.0",
    "vscode-languageserver-textdocument": "^1.0.1",
    "vscode-uri": "^3.0.2"
  },
  "scripts": {
    "prepare": "ts-node script prepare",
    "build": "ts-node script build",
    "debug": "ts-node script debug",
    "test": "ts-node script test",
    "format": "ts-node script format",
    "package": "ts-node script package"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "bracketSpacing": false
  }
}
